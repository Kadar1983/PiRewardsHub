"use client";
import { useEffect, useState } from "react";
import { useRouter } from "next/navigation";
import TransactionList from "../components/TransactionList";

export default function Page() {
  const [loading, setLoading] = useState(true);
  const router = useRouter();

  useEffect(() => {
    const stored = localStorage.getItem("user");
    if (!stored) {
      router.replace("/login");
    } else {
      setLoading(false);
    }
  }, []);

  if (loading)
    return <div className="flex items-center justify-center min-h-screen">جاري التحويل لتسجيل الدخول...</div>;

  const user = JSON.parse(localStorage.getItem("user"));

  return (
    <div>
      <h1 className="text-2xl font-bold mb-4">مرحبًا، {user.name}!</h1>
      <p className="mb-4">رصيدك الحالي: {user.balance} Pi</p>
      <TransactionList userId={user.id} />
    </div>
  );
}
